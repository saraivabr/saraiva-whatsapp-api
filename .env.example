# Credenciais de acesso ao painel web
USER=admin
PASSWORD=MUDE_ESTA_SENHA

# Chaves secretas para sessﾃ｣o e cookies (mﾃｭnimo 32 caracteres)
SESSION_SECRET=GERE_UMA_CHAVE_SECRETA_DE_SESSAO
COOKIE_SECRET=GERE_UMA_CHAVE_SECRETA_DE_COOKIE

# ==================================
# CONFIGURAﾃﾃグ DA APLICAﾃﾃグ
# ==================================

# Ambiente de execuﾃｧﾃ｣o (development | production)
